<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd ">
    <!-- server 和 dao对象创建-->
    <bean id="userService" class="com.windystreet.spring.ioc.service.UserService">
        <!-- 注入userDao对象
        name 属性:类里面属性名称【不是变量名】
        ref 属性:创建userDao对应bean标签的id值 -->
        <property name="UserDao" ref="userDaoImp"></property>
    </bean>
    <bean id="userDaoImp" class="com.windystreet.spring.ioc.dao.UserDaoImp"></bean>
</beans>